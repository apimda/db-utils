{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --concurrency 15",
    "format": "prettier --write . && prettier-package-json --write && eslint --fix .",
    "preinstall": "npx only-allow pnpm",
    "lint": "prettier --check . && eslint \".\"",
    "playground": "pnpm --filter @org/backend run playground",
    "prepare": "husky install",
    "repo-clean": "git clean -xdf -e .env",
    "test": "turbo test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-svelte": "^2.32.4",
    "eslint-plugin-turbo": "^1.10.12",
    "eslint-plugin-unused-imports": "^3.0.0",
    "globals": "13.21.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.2",
    "prettier-package-json": "^2.8.0",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-svelte": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.3",
    "turbo": "^1.10.16",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*": ["prettier --write --ignore-unknown", "eslint --fix"],
    "package.json": "prettier-package-json --write"
  },
  "packageManager": "pnpm@8.9.2",
  "pnpm": {
    "overrides": {
      "@apimda/core": "0.0.10",
      "@apimda/db-utils": "0.0.7",
      "@apimda/server": "0.0.10",
      "@types/node": "20.8.7",
      "drizzle-orm": "0.28.6",
      "mysql2": "3.6.2",
      "ts-node": "10.9.1",
      "typescript": "$typescript",
      "vitest": "0.34.6",
      "zod": "3.22.4"
    }
  }
}
